<div class="row">
<aside class="col-md-4">
<section class="user_info">
<h1>
<%= gravatar_for @user %>
<%= @user.name %>
</h1>
</section>
</aside>
<div class="col-md-8">
    
</div>
</div>
	<% @microposts.each do |post| %>
		<div class="card col-sm-12 my-auto">		
		  <div class="card-header">	  
		      <%= post.content %>
		      <div style="float:left">  <%= link_to image_tag(post.picture.url,size:"80x60"), micropost_path if post.picture? %></div>
		  </div><br>	  
		   <%= link_to "Edit Profile", edit_user_path(post) %>
		   <%= link_to "delete",post, method: :delete, data: { confirm: "You sure?" } %>		
	      <br>  </br>
	      <div class="timestamp">
             Posted <%= time_ago_in_words(post.created_at) %> ago.
          </div> <br></br>
	    </div><br>
    <% end %><br>
