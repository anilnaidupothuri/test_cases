<h2> New Post </h2>

<%= form_for(@micropost, html: { multipart: true }) do |f| %>
<div>
<div class="col-md-6 col-md-offset-3">
<%= f.text_area :content, placeholder: "Compose new micropost..." %>
</div>

<div class="col-md-3 col-md-offset-3 ">
<%= f.file_field :picture %><br>
</div>
<br>
<%= f.submit "Post", class: " col-md-4 col-md-offset-4 btn btn-primary" %>
<% end %>
</div>

<script type="text/javascript">
$('#micropost_picture').bind('change', function() {
var size_in_kilobytes = this.files[0].size/1024;
if (size_in_kilobytes > 200) {
alert('Maximum file size is 200KB. Please choose a smaller file.');
}});
</script>